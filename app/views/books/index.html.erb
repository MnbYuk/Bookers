<h1>Books</h1>

<table class = "table">
    <thead>
        <th>Title</th>
        <th>Book</th>
    </thead>

    <tbody>
        <% @books.each do |book| %>
        <tr>
        <td><span><%= book.title %></span></td>
        <td><span><%= book.body %></span></td>
        <td><span><%= link_to "show", book_path(book.id) %></span></td>
        <td><span><%= link_to "edit", edit_book_path(book.id) %></span></td>
        <td><span><%= link_to "destroy", book_path(book.id), method: :delete %></span></td>

        </tr>
        <% end %>

    </tbody>

</table>

<h1>New book</h1>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>

